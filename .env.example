# AutoSRE â€” Environment template
# Copy to .env and fill in values.

# AWS (for Amazon Nova reasoning + Nova Act)
AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=...
# AWS_SECRET_ACCESS_KEY=...
# Bedrock model for root-cause analysis (default: Nova 2 Lite)
NOVA_MODEL_ID=us.amazon.nova-2-lite-v1:0
# BEDROCK_READ_TIMEOUT_SECONDS=300
# Set to true to use Amazon Nova for root-cause analysis (requires AWS credentials)
# REASONING_USE_BEDROCK=true

# Slack (post-mortem reports)
SLACK_BOT_TOKEN=xoxb-...
SLACK_CHANNEL_ID=C...

# Demo / simulated dashboard (optional)
OPERATIONS_DASHBOARD_URL=http://localhost:3000
# Optional: override health URL for recovery verification (default: OPERATIONS_DASHBOARD_URL + /api/health)
# METRICS_URL=http://localhost:3000/api/health
# Simulated CloudWatch / alert source
INCIDENT_SOURCE=simulated
# Optional: directory for persisting incidents, logs, deployments (Phase 6)
# LOG_STORAGE_DATA_DIR=./data

# Phase 7: workflow hardening
# REASONING_MAX_RETRIES=2
# RECOVERY_VERIFY_TIMEOUT_SECONDS=120

# UI automation (Nova Act): set to false to use real browser when nova-act SDK and API key are configured
# UI_STUB=true
# NOVA_ACT_API_KEY=
